
#include <bits/stdc++.h>
using namespace std;

#define ll long long
#define ld long double
#define endl "\n"
typedef vector<ll> vll;
using vi = vector<int>;
#define pb              push_back 
#define Sort(a)         sort(a.begin(),a.end())
const ll N = 1e5+10;
const ll f = 1e17 ;

vi g[N];

pair<ll,ll> dfs(int v,int par){
    ll y=0,x=0;
    for(auto ch: g[v]){
        if(ch==par) continue;
        auto t=dfs(ch,v);
        y=max(y,t.second);
        x+=(t.first);
    }
    y++;
    x=max(x,y);
    return {x,y};
}

void solve(){
    int n;
    cin>>n;
    for (int i = 2; i <= n; ++i)
    {
        int x;
        cin>>x;
        g[i].pb(x);
        g[x].pb(i);
    }
    cout<<dfs(1,0).first;
}                         

int main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    int t=1;
    // cin>>t;
    while(t--)
        solve();

    return 0;
}
